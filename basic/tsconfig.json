{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": [
      "ES2024"
    ],
    "target": "ES2024",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*.mts",
    "test/**/*.mts",
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}